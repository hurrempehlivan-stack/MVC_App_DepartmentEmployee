@using MVC_App_DepartmentEmployee.core.entities
@model List<Employee>

<div class="container">
    <div class="card">
        <div>
            <h2>Çalışan Listesi</h2>
            <a class="btn" asp-action="Create">Yeni Çalışan Ekle</a>
        </div>

        <table class="table">
            <thead>
            <tr>
                <th>Ad</th>
                <th>Yaş</th>
                <th>Adres</th>
                <th>Departmanı</th>
                <th>İşlemler</th>
            </tr>
            </thead>
            <tbody>
            @foreach (var employee in Model)
            {
                <tr>
                    <td>@employee.EmployeeName</td>
                    <td>@employee.EmployeeAge</td>
                    <td>@employee.EmployeeAdress</td>
                    <td>@employee.Department.DepartmentName</td>
                    <td>
                        <a class="btn" asp-action="Edit" asp-route-id="@employee.EmployeeId">Düzenle</a>
                        <a class="btn" asp-action="Details" asp-route-id="@employee.EmployeeId">Detaylar</a>
                        <form asp-action="Delete" method="post" style="display:inline;">
                            <input type="hidden" name="id" value="@employee.EmployeeId" />
                            <button type="submit" class="btn" style="border: none">Sil</button>
                        </form>
                    </td>
                </tr>
            }
            </tbody>
        </table>
    </div>
</div>