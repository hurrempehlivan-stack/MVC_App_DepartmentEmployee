@using MVC_App_DepartmentEmployee.core.entities
@model List<MVC_App_DepartmentEmployee.core.entities.Department>

<div class="container">
    <div class="card">
        <div>
            <h2>Departman Listesi</h2>
            <a class="btn" asp-action="Create">Yeni Departman Ekle</a>
        </div>

        <table class="table">
            <thead>
            <tr>
                <th>Ad</th>
                <th>Açıklama</th>
                <th>İşlemler</th>
            </tr>
            </thead>
            <tbody>
            @foreach (var department in Model)
            {
                <tr>
                    <td>@department.DepartmentName</td>
                    <td>@department.DepartmentDescription</td>
                    <td>
                        <a class="btn" asp-action="Edit" asp-route-id="@department.DepartmentId">Düzenle</a>
                        <a class="btn" asp-action="Details" asp-route-id="@department.DepartmentId">Detaylar</a>
                        <form asp-action="Delete" method="post" style="display:inline;">
                            <input type="hidden" name="id" value="@department.DepartmentId" />
                            <button type="submit" class="btn" style="border: none">Sil</button>
                        </form>
                    </td>
                </tr>
            }
            </tbody>
        </table>
    </div>
</div>